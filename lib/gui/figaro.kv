#:kivy 1.11
#:import os os
#:import params lib.params

<SelectionPopup>:
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            viewclass: 'Label'
            data: root.get_data()
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        Button:
            text: 'Hello World!'
            on_press: root.dismiss()

<MainWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '-'
            on_press: root.select_input()
        Image:
            source: os.path.join(params.BPATH, 'media', 'play.png')
        Button:
            text: '-'
            on_press: root.select_output()